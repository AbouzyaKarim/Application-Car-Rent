@model Rent.Web.Models.VoitureDto

<form asp-action="VoitureEdit">
    <input asp-for="VoitureId" hidden />
    <div class="container border p-3">
        <h1 class="text-primary"> Edit Voiture</h1>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="marque" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="marque" class="form-control" />
                <span asp-validation-for="marque" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PriceByDay" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PriceByDay" class="form-control" />
                <span asp-validation-for="PriceByDay" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="VoitureIndex" class="btn-primary btn form-control">
                    Back To List
                </a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}
